<%= render Home::HomeComponent.new(active_tab: "About") do |layout| %>
  <% layout.with_pageContent do %>
    <div class="flex flex-col w-full">
      <!-- Hero Section -->
      <div class="text-center mb-12">
        <h1 class="text-5xl pb-4 text-primary font-bold"><%= t('about.title') %></h1>
        <p class="text-xl max-w-3xl mx-auto">
          <%= t('about.description') %>
        </p>
      </div>
      <!-- Our Story -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-16 items-center">
        <div>
          <h2 class="text-3xl font-bold text-primary mb-4"><%= t('about.mission.title') %></h2>
          <p class="text-lg">
            <%= t('about.mission.description1') %>
            <br>
            <br>
            <%= t('about.mission.description2') %>
          </p>
        </div>
        <div class="flex justify-center">
          <%= image_tag "about_us.jpg", alt: "Me and my girlfriend", class: "w-4/5 rounded shadow-lg" %>
        </div>
      </div>
      <!-- Core Values -->
      <div class="mb-16 text-center">
        <h2 class="text-3xl font-bold text-primary mb-8"><%= t('about.core_values.title') %></h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% t('about.core_values.values').each do |value| %>
            <%= render Services::ServiceCardComponent.new(
              icon: value[:title] == "Speed" ? "fa-solid fa-bolt" : 
                    value[:title] == "Security" ? "fa-solid fa-lock" : 
                    "fa-solid fa-user-friends",
              title: value[:title],
              description: value[:description],
              benefits: []
            ) %>
          <% end %>
        </div>
      </div>
      <!-- CTA -->
      <div class="bg-primary text-white rounded-2xl p-8 text-center">
        <h2 class="text-3xl font-bold mb-4"><%= t('about.cta.title') %></h2>
        <p class="mb-6 max-w-2xl mx-auto"><%= t('about.cta.description') %></p>
        <a href="/contact" class="bg-white text-primary font-bold py-3 px-6 rounded-lg inline-block">
          <i class="fa-solid fa-paper-plane mr-2"></i> <%= t('about.cta.button') %>
        </a>
      </div>
    <% end %>
  <% end %>
