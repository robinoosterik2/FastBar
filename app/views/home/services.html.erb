<%= render Home::HomeComponent.new(active_tab: "Services") do |layout| %>
  <% layout.with_pageContent do %>
    <div class="flex flex-col w-full">
      <!-- Hero Section -->
      <div class="text-center mb-12">
        <h1 class="text-5xl pb-4 text-primary font-bold"><%= t('services.title', default: 'Our Services') %></h1>
        <p class="text-xl max-w-3xl mx-auto"><%= t('services.description', default: 'Skip the line and get your drinks instantly with FastBar') %></p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        <%= render Services::ServiceCardComponent.new(
          icon: "fa-solid fa-mobile-screen",
          title: t('services.mobile_ordering.title'),
          description: t('services.mobile_ordering.description'),
          benefits: t('services.mobile_ordering.benefits')
        ) %>
        <%= render Services::ServiceCardComponent.new(
          icon: "fa-solid fa-bolt",
          title: t('services.express_pickup.title'),
          description: t('services.express_pickup.description'),
          benefits: t('services.express_pickup.benefits')
        ) %>
        <%= render Services::ServiceCardComponent.new(
          icon: "fa-solid fa-credit-card",
          title: t('services.secure_payment.title'),
          description: t('services.secure_payment.description'),
          benefits: t('services.secure_payment.benefits')
        ) %>
      </div>
      <!-- How It Works Section -->
      <%= render Services::HowItWorksComponent.new(
        title: t('services.how_it_works.title')
      ) %>
      <!-- Venues Section -->
      <%# TODO fuzzy search or search on city for example %>
      <%= render Services::VenuesComponent.new(
        companies: @companies,
      ) %>
      <!-- CTA Section -->
      <div class="bg-primary text-white rounded-2xl p-8 text-center">
        <h2 class="text-3xl font-bold mb-4"><%= t('services.title', default: 'Ready to Skip the Line?') %></h2>
        <p class="mb-6 max-w-2xl mx-auto"><%= t('services.description', default: 'Download the FastBar app today and experience a new way to enjoy your night out.') %></p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a href="#" class="bg-white text-primary font-bold py-3 px-6 rounded-lg flex items-center justify-center">
            <i class="fa-brands fa-apple mr-2 text-xl"></i>
            <%= t('services.download.apple_button', default: 'App Store') %>
          </a>
          <a href="#" class="bg-white text-primary font-bold py-3 px-6 rounded-lg flex items-center justify-center">
            <i class="fa-brands fa-google-play mr-2 text-xl"></i>
            <%= t('services.download.google_button', default: 'Google Play') %>
          </a>
        </div>
      </div>
    </div>
  <% end %>
<% end %>