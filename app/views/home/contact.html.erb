<%= render Home::HomeComponent.new(active_tab: "Contact") do |layout| %>
  <% layout.with_pageContent do %>
    <div class="flex flex-col md:flex-row w-full min-h-screen">
      <div class="left flex-1">
        <div class="text-5xl pb-4 text-primary font-bold"><%= t('contact.title') %></div>
        <p class='mb-4'><%= t('contact.description') %></p>
        <div class='mb-2 font-semibold'><i class="text-primary fa fa-phone"></i> <%= t('contact.phone') %></div>
        <div class='mb-2 font-semibold'><i class="text-primary fa-solid fa-envelope"></i> <%= t('contact.email') %></div>
        <div class='mb-2 font-semibold'><i class="text-primary fa-brands fa-linkedin fa"></i> <a href="https://www.linkedin.com/in/robin-oosterik/"><%= t('contact.linkedin') %></a></div>
        <div class="hidden mt-0 md:pt-6 md:flex justify-center">
          <%= image_tag "contact_us_no_bg.png", alt: t('contact.image_alt'), class: "w-4/5 rounded " %>
        </div>
      </div>
      <div class="right flex-1 flex justify-center">
        <div class="h-fit w-full max-w-md bg-white p-8 rounded-2xl shadow-md">
          <h2 class="text-2xl font-bold mb-6 text-primary"><%= t('contact.form.title') %></h2>
          <%= form_with url: "/contact", method: :post, local: true, class: "space-y-4" do |f| %>
            <div class="form-group">
              <%= f.label :name, t('contact.form.name_label'), class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent", placeholder: t('contact.form.name_placeholder') %>
            </div>
            <div class="form-group">
              <%= f.label :email, t('contact.form.email_label'), class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent", placeholder: t('contact.form.email_placeholder') %>
            </div>
            <div class="form-group">
              <%= f.label :subject, t('contact.form.subject_label'), class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.text_field :subject, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent", placeholder: t('contact.form.subject_placeholder') %>
            </div>
            <div class="form-group">
              <%= f.label :message, t('contact.form.message_label'), class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.text_area :message, rows: 5, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent", placeholder: t('contact.form.message_placeholder') %>
            </div>
            <div class="form-group">
              <%= f.submit t('contact.form.submit_button'), class: "w-full bg-primary hover:bg-primary-dark text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-150 ease-in-out" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>