<div class="flex flex-col items-center">
  <div class="logo text-center mx-0">
    <%= link_to root_path do %>
      <%= image_tag "FastBarLogo.png", alt: "FastBar Logo", class: "h-20 lg:h-24" %>
    <% end %>
  </div>
  <div class="bg-white max-w-full sm:max-w-1/2 px-4 sm:px-8 py-6 my-10 mx-4 shadow-md rounded-lg">
    <h2 class="text-2xl font-semibold text-center text-primary mb-6">Create an Account</h2>
    <%= form_with model: @user, url: dashboard_register_path(locale: I18n.locale), method: :post, local: true do |f| %>
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
        <%= render TextInputComponent.new(form: f, field: :first_name) %>
        <%= render TextInputComponent.new(form: f, field: :last_name) %>
      </div>
      <div class="mt-4">
        <%= render TextInputComponent.new(form: f, field: :username) %>
      </div>
      <div class="mt-4">
        <%= render TextInputComponent.new(form: f, field: :email, input_type: :email_field) %>
      </div>
      <div class="mt-4">
        <%= render TextInputComponent.new(form: f, field: :date_of_birth, input_type: :date_field) %>
      </div>
      <div class="mt-4">
        <%= render TextInputComponent.new(form: f, field: :password, input_type: :password_field) %>
      </div>
      <div class="mt-4">
        <%= render TextInputComponent.new(form: f, field: :password_confirmation, input_type: :password_field) %>
      </div>
      <div class="flex justify-center mt-6">
        <%= render ButtonComponent.new(
        text: "Register",
				variant: :primary,
				icon: "fa-solid fa-user-plus",
				icon_position: :start
			) %>
      </div>
    <% end %>
    <% if notice %>
      <div class="mt-4 p-3 bg-green-100 text-green-700 rounded text-center">
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div class="mt-4 p-3 bg-red-100 text-red-700 rounded text-center">
        <%= alert %>
      </div>
    <% end %>
  </div>
</div>