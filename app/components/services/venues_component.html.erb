<div class="mb-16">
  <h2 class="text-3xl font-bold text-center mb-8"><%= t('services.venues.title') %></h2>
  <p class="text-center max-w-3xl mx-auto mb-10"><%= t('services.venues.description') %></p>
  <!-- Search Form -->
  <div class="max-w-md mx-auto mb-8">
    <%= form_with url: request.path, method: :get, local: true do |form| %>
      <div class="flex items-center gap-2">
        <%= form.text_field :query, value: params[:query], placeholder: t('services.venues.search_placeholder'), class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary" %>
        <%= form.submit t('services.venues.search_button'), class: "bg-primary text-white px-4 py-2 rounded-md font-bold hover:bg-primary-dark" %>
      </div>
    <% end %>
  </div>
  <!-- Venues Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @companies.each do |company| %>
      <%= render Services::VenueCardComponent.new(company: company) %>
    <% end %>
  </div>
</div>
