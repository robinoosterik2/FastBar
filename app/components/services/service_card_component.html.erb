<div class="bg-white rounded-2xl shadow-md p-6 flex flex-col items-center text-center">
  <div class="bg-primary bg-opacity-10 p-4 rounded-full mb-4 w-20 h-20 flex justify-center items-center">
    <i class="<%= icon %> text-4xl text-white"></i>
  </div>
  <h3 class="text-2xl font-bold mb-3"><%= title %></h3>
  <p class="mb-4"><%= description %></p>
  <ul class="text-left space-y-2 w-full mb-4">
    <% benefits.each do |benefit| %>
      <li class="flex items-start">
        <i class="fa-solid fa-check text-primary mt-1 mr-2"></i>
        <span><%= benefit %></span>
      </li>
    <% end %>
  </ul>
</div>
